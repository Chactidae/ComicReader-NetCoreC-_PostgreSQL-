@{
}
@model Book
<div class="container mt-4">
    <div class="row">
        @if (Model != null)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card mb-4">
                    <label class="form-label">@Model.Images.Count</label>
                    <img src="~/images/@Model.Images.Count" class="card-img-top" alt="..." />
                </div>
            </div>
            @foreach (var image in Model.Images)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-4">
                        
                        <img src="/images/@image.Id" class="card-img-top"/><br><br>
                    </div>
            </div>
            }
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                </div>
            </div>
         }
    </div>
</div>
<div>
    <a asp-controller="Book" asp-action="AddPages" asp-route-id="@Model.Id" class="btn btn-primary">Добавить страницы</a>
</div>